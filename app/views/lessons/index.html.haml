%h1 Listing lessons

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Course
      %th
      %th
      %th

  %tbody
    - @lessons.each do |lesson|
      %tr
        %td= lesson.title
        %td= lesson.content
        %td= lesson.course
        %td= link_to 'Show', course_lesson_path(@course, lesson)
        %td= link_to 'Edit', edit_course_lesson_path(@course, lesson)
        %td= link_to 'Destroy', course_lesson_path(@course, lesson), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Lesson', new_course_lesson_path
